.row
  .col-xs-4
    = form_for @service, class: "form" do |f|
      - if @service.errors.any?
        #error_explanation
          %h2= "#{pluralize(@service.errors.count, "erro")} foram encontrados, por favor verifique "
          %ul
            - @service.errors.full_messages.each do |msg|
              %li= msg

      .field
        = f.label :motor
        = f.text_field :motor, class: "form-control"
      .field
        = f.label :cambio
        = f.text_field :cambio, class: "form-control"  
      .field
        = f.label :geral
        = f.text_field :geral, class: "form-control"
      .field
        = f.label :manutencao
        = f.text_field :manutencao, class: "form-control"  
      .actions
        = f.submit 'Save', class: "btn btn-primary"
